-- Hide/Minimize Button
local HideBtn = Instance.new("TextButton", TopBar)
HideBtn.Size = UDim2.new(0, 32, 0, 32)
HideBtn.Position = UDim2.new(1, -38, 0, 4)
HideBtn.Text = "_"
HideBtn.TextSize = 24
