-- Settings Section as mini UIs
local settingsY = mainY+rowH*4+20
local function makeSettingBox(label, control, y)
    local box = Instance.new("Frame", Scroll)
    box.Size = UDim2.new(0, 370, 0, 38)
    box.Position = UDim2.new(0, 20, 0, y)
    box.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
    box.BorderSizePixel = 0
    local corner = Instance.new("UICorner", box)
    corner.CornerRadius = UDim.new(0, 8)
    local lbl = Instance.new("TextLabel", box)
    lbl.Size = UDim2.new(0, 160, 1, 0)
    lbl.Position = UDim2.new(0, 10, 0, 0)
    lbl.BackgroundTransparency = 1
    lbl.Text = label
    lbl.TextColor3 = Color3.fromRGB(200, 200, 220)
    lbl.Font = Enum.Font.Gotham
    lbl.TextSize = 15
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.ZIndex = 3
    control.Parent = box
    control.Position = UDim2.new(0, 180, 0, 4)
    control.Size = UDim2.new(0, 170, 0, 30)
    control.ZIndex = 4
    return box
end

